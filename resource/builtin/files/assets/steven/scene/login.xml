<scene>
	<button x="0" y="100" width="400" height="40" halign="center" valign="middle" click=".Login" id="btnLogin">
		<text value="Login" halign="center" valign="middle" id="txtLogin"/>
	</button>
	
	<text id="txtError" x="0" y="150" r="255" g="50" b="50" halign="center" valign="middle"/>
	
	<textbox x="0" y="-20"  width="400" height="40" halign="center" valign="middle" id="user">
		<text value="Username/Email:" x="0" y="-18"/>
	</textbox>
	<textbox x="0" y="40" width="400" height="40" 
			halign="center" valign="middle" id="pass" 
			password="true" submit=".Login">	
		<text value="Password:" x="0" y="-18"/>
	</textbox>
</scene>